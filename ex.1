programa 
{
	funcao inicio() 
	{
		inteiro numero, positivo, negativo, zero

		
		escreva("Informe um número para ver seu valor: ")
		leia(numero)

		limpa()
		se ( numero >= 1)
		escreva("O número informado é positivo.")
		
		se ( numero < 0) 
		escreva("O número informado é negativo.")

		se ( numero == 0) 
		escreva("O número informado é zero.") 
	}
}
